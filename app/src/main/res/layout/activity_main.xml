<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/menu1_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu1_imageview"
                android:src="@drawable/selector_menu1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/menu1_textview"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="menu1"
                android:textColor="@color/selector_menu_textview"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu2_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu2_imageview"
                android:src="@drawable/selector_menu2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/menu2_textview"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="menu2"
                android:textColor="@color/selector_menu_textview"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu3_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu3_imageview"
                android:src="@drawable/selector_menu3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/menu3_textview"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="menu3"
                android:textColor="@color/selector_menu_textview"/>

        </LinearLayout>

    </LinearLayout>
</layout>